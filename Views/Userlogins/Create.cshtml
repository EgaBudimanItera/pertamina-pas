@model pas_pertamina.Models.Userlogin

@{
    ViewData["Title"] = "Create";
}

<ol class="breadcrumb">
    <li><a href="#">Settings</a></li>
    <li><a href="#">List User</a></li>
    <li class="active">Tambah User</li>
</ol>
<h4 class="c-grey-900 mB-20">Tambah User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Namauser" class="control-label"></label>
                <input asp-for="Namauser" class="form-control" />
                <span asp-validation-for="Namauser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Akses" class="control-label"></label>
                <select asp-for="Akses" class="form-control">
                    <option value="">Pilih Hak Akses</option>
                    <option value="Petugas BBM">Petugas BBM</option>
                    <option value="Planner BBM">Planner BBM</option>
                    <option value="Petugas LPG">Petugas LPG</option>
                    <option value="Planner LPG">Planner LPG</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Akses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPelabuhan" class="control-label"></label>
                <select asp-for="IdPelabuhan" class="form-control" asp-items="ViewBag.IdPelabuhan"></select>
            </div>
            <div class="form-group">
               @* <label asp-for="CreatedBy" class="control-label"></label>*@
                <input type="hidden" asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="CreatedTime" class="control-label"></label>*@
                <input type="hidden" asp-for="CreatedTime" class="form-control" />
                <span asp-validation-for="CreatedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="UpdatedBy" class="control-label"></label>*@
                <input type="hidden" asp-for="UpdatedBy" class="form-control" />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UpdatedTime" class="control-label"></label>*@
                <input type="hidden" asp-for="UpdatedTime" class="form-control" />
                <span asp-validation-for="UpdatedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="DeletedBy" class="control-label"></label>*@
                <input type="hidden" asp-for="DeletedBy" class="form-control" />
                <span asp-validation-for="DeletedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="DeletedTime" class="control-label"></label>*@
                <input type="hidden" asp-for="DeletedTime" class="form-control" />
                <span asp-validation-for="DeletedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="SoftDelete" class="control-label"></label>*@
                <input type="hidden" asp-for="SoftDelete" class="form-control" />
                <span asp-validation-for="SoftDelete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info"> <i class="fa fa-save"></i> Simpan</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
