@model pas_pertamina.Models.Rute

@{
    ViewData["Title"] = "Edit";
}

<ol class="breadcrumb">
    <li><a href="#">Settings</a></li>
    <li><a href="#">List Rute</a></li>
    <li class="active">Ubah Rute</li>
</ol>
<h3 class="header-form">Ubah Rute  <i class="fa fa-pencil pull-right"></i> </h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idrute" />
            <div class="form-group">
                <label asp-for="Idkapal" class="control-label"></label>
                <select asp-for="Idkapal" class="form-control" asp-items="ViewBag.Idkapal">Nama Kapal</select>
            </div>
            <div class="form-group">
                <label asp-for="Idasal" class="control-label"></label>
                <select asp-for="Idasal" class="form-control" asp-items="ViewBag.Idasal">Asal Pelabuhan</select>
            </div>
            <div class="form-group">
                <label asp-for="Idtujuan" class="control-label"></label>
                <select asp-for="Idtujuan" class="form-control" asp-items="ViewBag.Idtujuan">Tujuan Pelabuhan</select>
            </div>
            <div class="form-group">
                <label asp-for="Seatime" class="control-label">Seatime</label>
                <input asp-for="Seatime" class="form-control" placeholder="00:00:00" />
                <span asp-validation-for="Seatime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CreatedBy" class="control-label"></label>*@
                <input type="hidden" asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CreatedTime" class="control-label"></label>*@
                <input type="hidden" asp-for="CreatedTime" class="form-control" />
                <span asp-validation-for="CreatedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UpdatedBy" class="control-label"></label>*@
                <input type="hidden" asp-for="UpdatedBy" class="form-control" />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UpdatedTime" class="control-label"></label>*@
                <input type="hidden" asp-for="UpdatedTime" class="form-control" />
                <span asp-validation-for="UpdatedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="DeletedBy" class="control-label"></label>*@
                <input type="hidden" asp-for="DeletedBy" class="form-control" />
                <span asp-validation-for="DeletedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="DeletedTime" class="control-label"></label>*@
                <input type="hidden" asp-for="DeletedTime" class="form-control" />
                <span asp-validation-for="DeletedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="SoftDelete" class="control-label"></label>*@
                <input type="hidden" asp-for="SoftDelete" class="form-control" />
                <span asp-validation-for="SoftDelete" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info"> <i class="fa fa-save"></i> Simpan</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kembali</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
